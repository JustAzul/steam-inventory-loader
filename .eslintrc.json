{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",        
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended",
        "prettier"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": ["./tsconfig.json"]
      },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "import/extensions": [
          "error",
          "ignorePackages",
          {
            "js": "never",
            "jsx": "never",
            "ts": "never",
            "tsx": "never"
          }
        ],
        "max-len":"off",
        "linebreak-style": "off",
        "import/order": "warn",
        "prettier/prettier": "error"
    }
}
